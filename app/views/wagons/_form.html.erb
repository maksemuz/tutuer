<%= form_for(@wagon) do |f| %>
    <%= render 'common/errors', resource: @wagon %>

    <div class="field">
      <%= f.label :number %>
      <%= f.text_field :number %>
    </div>

    <div class="field">
      <%= f.label :wagon_kind %>
      <%= f.select :wagon_kind, ['Купе','Плацкарт'] %>
    </div>

    <div class="actions">
      <%= f.submit "#{@wagon.new_record? ? 'Создать' : 'Изменить'}" %>
    </div>
<% end %>