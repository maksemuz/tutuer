<%= form_for(@wagon) do |f| %>
    <%= render 'common/errors', resource: @wagon %>

    <div class="field">
      <%= f.label :number %>
      <%= f.text_field :number %>
    </div>

    <div class="field">
      <%= f.label :wagon_kind %>
      <%= f.select :wagon_kind, ['Купе','Плацкарт'] %>
    </div>

    <div class="field">
      <%= f.label :upper_places %>
      <%= f.text_field :upper_places %>
    </div>

    <div class="field">
      <%= f.label :lower_places %>
      <%= f.text_field :lower_places %>
    </div>

    <div class="field">
      <%= f.label :train %>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="actions">
      <%= f.submit "#{@wagon.new_record? ? 'Создать' : 'Изменить'}" %>
    </div>
<% end %>