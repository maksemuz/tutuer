<%= form_for(@ticket) do |f| %>
    <%= render 'common/errors', resource: @ticket %>

    <div class="field">
      <%= f.label :source %>
      <%= f.text_field :source %>
    </div>
    <div class="field">
      <%= f.label :destination %>
      <%= f.text_field :destination %>
    </div>

    <div class="actions">
      <%= f.submit "#{@ticket.new_record? ? 'Создать' : 'Изменить'}" %>
    </div>
<% end %>
