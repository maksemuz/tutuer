<%= form_for [:admin, train], html: { style: "display: #{hidden ? 'none' : 'block' }"} do |f| %>
    <%= render 'common/errors', resource: train %>

    <div class="field">
      <%= f.label :number %>
      <%= f.text_field :number %>
    </div>

    <div class="field">
      <%= f.label :route %>
      <%= f.collection_select :route_id, Route.all, :id, :name %>
    </div>

    <div class="field">
      <%= f.label :current_station %>
      <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
    </div>

    <div class="field">
      <%= f.label t('admin.trains.index.sort_ahead') %>
      <%= f.select :head_sort, [true, false]%>
    </div>

    <div class="actions">
      <%= f.submit "#{train.new_record? ? t('common.create') : t('common.change')}" %>
    </div>
<% end %>
